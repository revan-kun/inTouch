<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	id="WebApp_ID" version="3.0">
	<display-name>InTouch</display-name>

	<!-- SMTP settings -->
	<context-param>
		<param-name>host</param-name>
		<param-value>smtp.gmail.com</param-value>
	</context-param>

	<context-param>
		<param-name>port</param-name>
		<param-value>587</param-value>
	</context-param>

	<context-param>
		<param-name>user</param-name>
		<param-value>intouchsyst@gmail.com</param-value>
	</context-param>

	<context-param>
		<param-name>pass</param-name>
		<param-value>2013system</param-value>
	</context-param>

	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>


	<servlet>
		<servlet-name>Registration</servlet-name>
		<servlet-class>com.epam.lab.intouch.web.servlet.MemberRegistrationServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>profileCall</servlet-name>
		<servlet-class>com.epam.lab.intouch.web.servlet.CallProfileEditorServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>FileUpload</servlet-name>
		<servlet-class>com.epam.lab.intouch.web.servlet.FileAttachmentServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>editProfile</servlet-name>
		<servlet-class>com.epam.lab.intouch.web.servlet.EditProfileServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>login</servlet-name>
		<servlet-class>com.epam.lab.intouch.web.servlet.MemberLoginServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>MemberSearch</servlet-name>
		<servlet-class>com.epam.lab.intouch.web.servlet.MemberSearchServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ProjectSearch</servlet-name>
		<servlet-class>com.epam.lab.intouch.web.servlet.ProjectSearchServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>RestfulServiceLogin</servlet-name>
		<servlet-class>com.epam.lab.intouch.web.servlet.api.rest.LoginServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>RestfulServiceProject</servlet-name>
		<servlet-class>com.epam.lab.intouch.web.servlet.api.rest.ProjectServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Project</servlet-name>
		<servlet-class>com.epam.lab.intouch.web.servlet.ProjectServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Member</servlet-name>
		<servlet-class>com.epam.lab.intouch.web.servlet.MemberServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>DeleteMember</servlet-name>
		<servlet-class>com.epam.lab.intouch.web.servlet.DeleteMemberServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>UpdateProject</servlet-name>
		<servlet-class>com.epam.lab.intouch.web.servlet.UpdateProjectServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>UserCheck</servlet-name>
		<servlet-class>com.epam.lab.intouch.web.servlet.UserCheckServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>CloseProject</servlet-name>
		<servlet-class>com.epam.lab.intouch.web.servlet.CloseProjectServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>DestroySession</servlet-name>
		<servlet-class>com.epam.lab.intouch.web.servlet.DestroySession</servlet-class>
	</servlet>



	<servlet-mapping>
		<servlet-name>MemberSearch</servlet-name>
		<url-pattern>/member_search</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ProjectSearch</servlet-name>
		<url-pattern>/project_search</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>RestfulServiceLogin</servlet-name>
		<url-pattern>/rest/login</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>RestfulServiceProject</servlet-name>
		<url-pattern>/rest/project</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Registration</servlet-name>
		<url-pattern>/registration</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>editProfile</servlet-name>
		<url-pattern>/profile</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>profileCall</servlet-name>
		<url-pattern>/profileCall</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>FileUpload</servlet-name>
		<url-pattern>/fileUpload</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Project</servlet-name>
		<url-pattern>/project</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Member</servlet-name>
		<url-pattern>/member</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DeleteMember</servlet-name>
		<url-pattern>/delete_member</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>UpdateProject</servlet-name>
		<url-pattern>/update_project</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>UserCheck</servlet-name>
		<url-pattern>/check</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>CloseProject</servlet-name>
		<url-pattern>/close_project</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DestroySession</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>


</web-app>